{
  "site": {
    "code_name": "site",
    "type": "selectInput",
    "label": "site_label",
    "choices": "IGNORE"
  },

  "block": {
    "code_name": "block",
    "type": "selectInput",
    "label": "block_label",
    "choices": "IGNORE"
  },
  
  "activity": {
    "code_name": "activity",
    "type" : "selectInput",
    "label" : "activity_label",
    "choices": "activity_choice",
    "sub_elements": {
      
      "planting": {
        "condition": "input.activity == 'planting'",
        "planting_help_text" : {
	    "type" : "helpText",
	    "text" : "Here you can have specific input types for the planting activity."
        },
        "planting_option_1": {
          "code_name": "planting_option_1",
          "type": "checkboxInput",
          "label": "planting_option_1_label",
          "sub_elements": {
            "condition": "input.planting_option_1 == '1'",
            "planting_option_11": {
              "code_name": "planting_option_11",
              "type": "selectInput",
              "label": "planting_option_11_label",
              "choices": ["alt1", "alt2"]
            }
          }
        },
        "plant_species": {
          "code_name" : "plant_species",
          "type": "selectInput",
          "label": "plant_species_label",
          "choices": ["spc_barley", "spc_wheat", "spc_rye"]
        }
      },
      
      "harvest": {
        "condition": "input.activity == 'harvest'",
        "harvest_help_text" : {
	    "type" : "helpText",
	    "text" : "Here you can have specific input types for the harvest activity."
        }
      }

    }
  },

  "date" : {
    "code_name": "date",
    "type" : "dateInput",
    "label" : "date_label"
  },

  "notes" : {
    "code_name" : "notes",
    "type" : "textArea",
    "label" : "notes_label",
    "placeholder" : "notes_placeholder"
  },

  "save" : {
    "code_name" : "save",
    "type" : "actionButton",
    "label": "save_label"
  }
}
